# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# JS Router
GET    /jsrouter       controllers.Application.javascriptRoutes
# Home page
GET    /               controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file   controllers.Assets.at(path="/public", file)
#GET    /assets/img/glyphicons-halflings-white.png      controllers.Assets.at(path="/public", file="images/glyphicons-halflings-white.png")
#GET    /assets/img/glyphicons-halflings.png            controllers.Assets.at(path="/public", file="images/glyphicons-halflings.png")
#GET    /assets/img/glyphicons-halflings.png            controllers.Assets.at(path="/public", file="/glyphicons-halflings.png")

# Authentication
#GET     /login                      controllers.Auth.login
POST   /login          controllers.Auth.authenticate
GET    /logout         controllers.Auth.logout
  
# Sign-up
GET    /signup         controllers.Signup.form
POST   /signup         controllers.Signup.submit

# Meet list
GET    /meetList       controllers.Application.meetlist

# Manage URLS
GET    /manageUrls     controllers.ManageUrls.form
POST   /addUrls        controllers.ManageUrls.add
GET    /scrape         controllers.ManageUrls.scrape(url) 
GET    /removeUrl      controllers.ManageUrls.removeUrl(url) 
GET    /scrapeAll      controllers.ManageUrls.scrapeAll 

# Manage Swimmer
GET    /getSwimmers    controllers.Application.getFollowedSwimmers
POST   /addSwimmer     controllers.ManageSwimmers.add
POST   /unfollow       controllers.ManageSwimmers.unfollow